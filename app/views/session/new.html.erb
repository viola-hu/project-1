<h2>Log into your account</h2>

<% if flash[:error] %>
  <%= flash[:error] %>
  <br><br>
<% end %>

<%= form_tag login_path do %>

  <%= label_tag :email %>
  <%= email_field_tag :email %>

  <br>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <br>

  <%= submit_tag 'Login' %>

<% end %>
